<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<% @pages.each do |page| %>
  <div class="page-<%= page.id %>">
    <h2 class="text-2xl mb-3">
      <%= page.id %> .
      <%= page.title %>

      <%= link_to 'Show', page %>
      <%= link_to 'Edit', edit_page_path(page) %>
      <%#= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %>
    </h2>
    <%= page.content.html_safe %>
  </div>
<% end %>

<br>

